@{
    ViewData["Title"] = "Cart Page";
}
@using ShoeStoreManagement.Views.Shared.Components;
@using ShoeStoreManagement.Core.Models;
@model Cart

<div class="row justify-content-sm-between">
    <section class="col-8 col-sm-7">
        @foreach(var item in Model.CartDetails) {
            <component type="typeof(CartItemCard)" render-mode="ServerPrerendered" param-cartItem=@item />
        }
    </section>

    <section class="col-4 padding-cart" aria-label="price">
        <div class="d-flex justify-content-between">
            <h6>Items amount</h6>
            <h6>4</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h5 class="fw-bold mt-3">Total price</h5>
            <h5 class="fw-bold mt-3">$@Model.CartTotalPrice</h5>
        </div>
        <a asp-controller="Order" asp-action="Index" class="btn btn-primary w-65 mt-5">
            Make an order
        </a>
        @*<button class="btn btn-primary w-100 mt-5">buy now</button>*@
    </section>
</div>


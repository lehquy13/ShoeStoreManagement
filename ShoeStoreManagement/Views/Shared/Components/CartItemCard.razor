<div class="row">
    <div class="card d-flex flex-row col border-1 border-color p-0">
        <img src="image/shoe.jpg" class="card-img-top img h-auto w-30" alt="image" />
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <div class="d-flex justify-content-between">
                    <p class="h3">@product.ProductName</p>
                    <p class="h6">@product.Amount</p>
                </div>
                <div class="d-flex justify-content-between align-items-end mb-1">
                    <p class="h5">@product.Color</p>
                    <p class="h2 text-dark">@product.ProductUnitPrice</p>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-end">
                <div>
                    <p class="m-0 caption text-primary">$20</p>
                    <div>counter</div>
                </div>
                <p class="icon-delete m-0 text-primary" onclick=""></p>
            </div>
        </div>
    </div>
</div>
@using ShoeStoreManagement.Core.Models
@code {
    [Parameter]
    public Product product { get; set; } = null!;
    private void handleEvent()
    {
        product.ProductUnitPrice++;
    }
}

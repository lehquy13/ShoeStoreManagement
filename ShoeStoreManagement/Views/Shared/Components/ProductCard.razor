@using ShoeStoreManagement.Core.Models
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web;

@*Onclick => set isShowNavbar = false*@
<div class="card border-0 col-4 mb-5" onclick="">
	<img src="image/shoe.jpg" class="card-img-top img h-auto w-auto" alt="image" />
	<div class="card-body">
		<p class="fw-bold h5 mb-2">@product.ProductName</p>
		<p class="h5 mb-2">@product.ProductUnitPrice</p>
	</div>
	<button class="btn btn-primary" type="button" @onclick="@(()=>handleEvent())">Add to Cart</button>
</div>

@code {
	[Parameter]
	public Product product { get; set; } = null!;

	private void handleEvent() {
		product.ProductUnitPrice++;
	}
}

@using ShoeStoreManagement.Core.Models
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web;

<div class="row col-9 border-1 border-app p-0">
    <div class="col-8 p-0">
        @if (order.OrderDetails.Count > 0) {
            @foreach (var item in order.OrderDetails)
            {
                <OrderItemCard orderDetail=@item @key="item"/>
            }
        }
    </div>
    <div class="col p-0 d-flex flex-column justify-content-between align-items-end p-3">
        <div class="caption">
            Deliveriy Expected on 20-12-2022
        </div>
        <div class="d-flex align-items-end">
            <p class="h3">Total</p>
            <p class="h2 text-dark ms-3">$@order.OrderTotalPayment</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Order order { get; set; } = null!;
}

@using Microsoft.AspNetCore.Identity
@using ShoeStoreManagement.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await  UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin")) {
    <li class="nav-item">
        <a id="" class="nav-link text-dark" asp-area="Admin" asp-controller="Stock" asp-action="Index">Stock</a>
    </li>
    <li class="nav-item">
        <a id="" class="nav-link text-dark" asp-area="Admin" asp-controller="ProductCategories" asp-action="Index">Category</a>
    </li>
}
else if (!SignInManager.IsSignedIn(User)) {
    <li class="nav-item">
        <a id="" class="nav-link text-dark">About</a>
    </li>
}

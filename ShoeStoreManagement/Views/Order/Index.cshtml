@{
    ViewData["Title"] = "Order Page";
}

<div class="row justify-content-sm-between">
    <div class="col-sm-6 col-12">
        <section aria-label="list of cart item">
            <label>Order</label>
            <div class="cart-list mt-3">
                <div class="card cart-item">
                    <div class="row">
                        <div class="col-sm-3">
                            @*<img class="card-img" />*@
                            <div class="cart-item-img"></div>
                        </div>
                        <div class="card-body col-sm-9 pe-4">
                            <div class="d-flex justify-content-between align-items-cen">
                                <h5 class="card-title">Card title</h5>
                                <h6>x1</h6>
                            </div>
                            <h5 class="card-title product-card-price fw-bold">20.000</h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section aria-label="select information of user" class="mt-5">
            <label>Information</label>
            <div class="d-flex gap-3 mt-3">
                <h6>Name</h6>
                <h6>meow</h6>
            </div>
            <div class="d-flex gap-3">
                <h6>sdt</h6>
                <h6>000x</h6>
            </div>
            <div class="d-flex gap-3">
                <h6>Addr</h6>
                <h6>VN</h6>
            </div>
            <button class="btn btn-primary mt-2">
                change information
            </button>
        </section>
        <section aria-label="select delivery method" class="mt-5">
            <label>Delivery method</label>
            <section aria-label=" choose option 1" class="d-flex align-items-center gap-2 mt-3">
                <input type="radio" />
                <label>option1</label>
            </section>
            <section aria-label=" choose option 2" class="d-flex align-items-center gap-2">
                <input type="radio" />
                <label>option2</label>
            </section>
        </section>
        <section aria-label="select pay method" class="mt-5">
            <label>Payment method</label>
            <section aria-label=" choose option 1" class="d-flex align-items-center gap-2 mt-3">
                <input type="radio" />
                <label>option1</label>
            </section>
            <section aria-label=" choose option 2" class="d-flex align-items-center gap-2">
                <input type="radio" />
                <label>option2</label>
            </section>
        </section>
    </div>

    <div class="col-sm-3 col-12">
        <section aria-label="select voucher">
            <label>Voucher</label>
            <div class="mt-3 d-flex gap-2 justify-content-between">
                <input type="text" class="w-75" />
                <button class="btn btn-primary w-25">Check</button>
            </div>
        </section>
        <section aria-label="price" class="mt-5">
            <div class="d-flex justify-content-between">
                <h5>Total price</h5>
                <h5>20.000</h5>
            </div>
            <a asp-controller="Order" asp-action="Confirm" class="btn btn-primary w-100 mt-5">
                buy now
            </a>
            @*<button class="btn btn-primary w-100 mt-5">buy now</button>*@
        </section>
    </div>
</div>
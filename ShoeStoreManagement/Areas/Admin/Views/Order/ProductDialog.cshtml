@*CUSTOMER*@
@using ShoeStoreManagement.Views.Shared.Components;
@using ShoeStoreManagement.Core.Models;
@using ShoeStoreManagement.Areas.Identity.Data
@model List<Product>
@{
    List<Product>? products = ViewData["products"] as List<Product> ?? null;
    if(products != null)
    foreach (var i in products)
    {
        Model.Add(i);
    }
}
<<button type="button" class="btn btn-secondary icon-plus rounded position-fixed" data-toggle="modal" to data-target="#CModal">
    Add item
</button>




<div class="modal fade" id="CModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <div class=" modal-content w-auto px-3 py-3">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Add new User</h5>
            </div>
            <div class="modal-body p-0 mt-2" style="width: 850px">
                <div class="col-2 borderCustom1">
                    <div class="row">
                        <ii class="row-1 h6 mb-2 mt-4">Category</ii>

                        <div class="tabCustom row-cols-6">
                            <button class="tabCustom" ">
                                All
                            </button>
                            <button class="tabCustom">Customer</button>
                            <button class="tabCustom">Staff</button>
                            <button class="tabCustom">Admin</button>

                        </div>
                    </div>
                </div> @*used to col-3 vs col-10*@
                <div class="container col-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-wrap">
                                <table class="table myaccordion table-hover" id="accordion">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th class="button">Name</th>
                                            <th class="button">Price</th>
                                            <th class="button">Color</th>
                                            <th class="button">Amount</th>
                                            <th class="button"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if(Model != null)
                                        @for(var i = 1; i <= Model.Count; i++){
                                        <tr data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed">

                                            <th scope="row">@i</th>
                                            <td>@Model[i-1].ProductName</td>
                                            <td>@Model[i-1].ProductUnitPrice</td>
                                            <td>@Model[i-1].Color</td>
                                            <td>@Model[i-1].Amount</td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" value="@Model[i-1].ProductId" name="ProductId" id="checkbox_@i" />
                                                @*<a href="@Url.Action("PickItems","Order",new {id = products[i-1].ProductId})" class="fa-solid fa-check"></a>*@
                                            </td>

                                        </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
                <<a href="@Url.Action("PickItems","Order",new {strings = Model})" class="fa-solid fa-check"></a>
            </div>
        </div>

    </div>
</div>

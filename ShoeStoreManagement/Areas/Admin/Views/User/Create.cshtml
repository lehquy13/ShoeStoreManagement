@using Microsoft.AspNetCore.Identity;
@using ShoeStoreManagement.Areas.Identity.Data
@model ApplicationUser;

@{
	List<IdentityRole> allRoles = ViewData["allRoles"] as List<IdentityRole> ?? new List<IdentityRole>();
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary icon-plus rounded position-fixed bottom-0" data-toggle="modal" to data-target="#Modal">
</button>

<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<form method="post" action="Admin/User/Create" class="modal-content w-auto px-3 py-3">
			<div class="modal-content w-auto px-3 py-3">
				<div class="modal-header">
					<h5 class="modal-title" id="ModalLabel">Add new User</h5>
				</div>
				<div class="modal-body p-0 mt-2" style="width: 550px">
					<div class="row">
						<div class="col-6 d-flex flex-column gap-2">
							<div class="form-floating">
								<input type="text" asp-for="UserName" class="form-control" id="floatingInput" placeholder="name">
								<label for="floatingInput">Name</label>
							</div>
							<div class="form-floating">
								<input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="abc@gm.uit.edu.vn">
								<label for="floatingInput">Email</label>
							</div>
							<div class="flex-grow-1">
								@*<img src="image/shoe.jpg" class="img h-auto w-65" alt="image" />*@
								@*<input type="image" class="img h-auto w-65" title="image" />*@
							</div>
						</div>
						<div class="col-6 d-grid gap-2">
							<div class="form-floating">
								<select class="form-select" asp-for="selectedRole" asp-items="@(new SelectList(allRoles, "Name", "Name"))" id="floatingSelect" aria-label="Floating label select example">
								</select>
								<label for="floatingSelect">Role</label>
							</div>
							<div class="form-floating">
								<input type="tel" asp-for="PhoneNumber" class="form-control" id="floatingInput" placeholder="094xxxxx73">
								<label for="floatingInput">Phone</label>
							</div>

							<div class="form-floating">
								<input type="tel" asp-for="singleAddress" class="form-control" id="floatingInput" placeholder="address...">
								<label for="floatingInput">Address</label>
							</div>
							@*
							<div class="form-floating">
								<input type="date" class="form-control" id="floatingInput" placeholder="02-02-2002">
								<label for="floatingInput">Email Birthday</label>
							</div>
							<div class="form-floating">
								<select class="form-select" id="floatingSelect" aria-label="Floating label select example">
									<option selected>Open this select menu</option>
									<option value="1">One</option>
									<option value="2">Two</option>
									<option value="3">Three</option>
								</select>
								<label for="floatingSelect">Voucher</label>
							</div>*@
						</div>
					</div>
					<div class="row d-flex justify-content-start mt-3 gx-1">
					</div>
				</div>
				<div class="modal-footer d-flex justify-content-between">
					<p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>


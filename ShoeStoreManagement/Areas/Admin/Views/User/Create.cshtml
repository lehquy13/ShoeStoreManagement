@using Microsoft.AspNetCore.Identity;
@using ShoeStoreManagement.Areas.Identity.Data
@using ShoeStoreManagement.Core.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model UserVM

<form method="post" asp-action="Create" asp-controller="User" asp-area="Admin" class="modal-content border-0" style="width: 760px" enctype="multipart/form-data" onsubmit="return createSth(this);">
	<div class="row">
		<div class="col-6 d-flex flex-column gap-2">
			<div class="form-floating">
				<input type="text" asp-for="user.FullName" class="form-control" id="floatingInput" placeholder="name" required> 
				<label for="floatingInput">Name</label>
				<span asp-validation-for="user.FullName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input type="email" asp-for="user.Email" class="form-control" id="floatingInput" placeholder="abc@gm.uit.edu.vn" required>
				<label for="floatingInput">Email</label>
				<span asp-validation-for="user.Email" class="text-danger"></span>
			</div>
			<div class="flex-grow-1">
				<div class="form-floating">
					<input asp-for="user.Avatar" accept="image/*" class="form-control" />
				</div>
			</div>
		</div>
		<div class="col-6 d-grid gap-2">
			<div class="form-floating">
				<select class="form-select" asp-for="user.Role" asp-items="@(new SelectList(Model.roles, "Name", "Name"))" id="floatingSelect" aria-label="Floating label select example">
				</select>
				<label for="floatingSelect">Role</label>
				<span asp-validation-for="user.Role" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input type="tel" asp-for="user.PhoneNumber" class="form-control" id="floatingInput" placeholder="094xxxxx73" required>
				<label for="floatingInput">Phone</label>
				<span asp-validation-for="user.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input type="date" asp-for="user.Birthday" class="form-control" id="floatingInput" value="02/02/2002" required>
				<label for="floatingInput">Birthday</label>
				<span asp-validation-for="user.Birthday" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="user.SingleAddress" class="form-control" id="floatingInput" placeholder="address..." required>
				<label for="floatingInput">Address</label>
				<span asp-validation-for="user.SingleAddress" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="modal-footer d-flex justify-content-between mt-5">
		<p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
	@Html.AntiForgeryToken()
</form>

@section Scripts {
	@{
		<partial name="./_ValidationScriptsPartial"></partial>
	}
	}


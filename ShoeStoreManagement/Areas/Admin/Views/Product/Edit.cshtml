<!-- Modal -->
@using ShoeStoreManagement.Views.Shared.Components;
@using ShoeStoreManagement.Core.Models;
@model Product
@{
    List<Product>? products = ViewData["products"] as List<Product> ?? null;
    List<ProductCategory>? productCategories = ViewData["productCategories"] as List<ProductCategory> ?? null;
}
<a class=" fas fa-edit" data-toggle="modal" to data-target="#Modal">
</a>
<div class="modal fade" id="Modal" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content w-auto px-3 py-3">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Edit Product</h5>
            </div>
            <div class="modal-body p-0 mt-2" style="width: 550px">
                <div class="row">
                    <div class="col-6 d-flex flex-column gap-2">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Annanas A" asp-for="ProductName">
                            <label for="floatingInput">Enter Name</label>
                        </div>
                        <div class="form-floating">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Black" asp-for="Color"> 
                            <label for="floatingInput">Enter Color</label>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control w-90" placeholder="Leave a comment here" id="floatingTextarea">nothing</textarea>
                            <label for="floatingTextarea">Enter Descripiton</label>
                        </div>
                    </div>
                    <div class="col-6 d-grid gap-2">
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                @if(productCategories!=null){
                                    foreach(var obj in productCategories){
                                        <option value="1">@obj.ProductCategoryName</option>
                                    }
                                }
                               
                            </select>
                            <label for="floatingSelect">Category</label>
                        </div>
                        <div class="form-floating">
                            <input type="number" class="form-control" id="floatingInput" placeholder="$20" asp-for="ProductUnitPrice">
                            <label for="floatingInput">Enter Price</label>
                        </div>
                        <div class="form-floating">
                            <input type="number" class="form-control" id="floatingInput" placeholder="1" asp-for="Amount"> 
                            <label for="floatingInput">Enter Amount</label>
                        </div>
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                            <label for="floatingSelect">Voucher</label>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-start mt-3 gx-1">
                    <input type="image" class="img h-auto col-2" title="image" />
                    <input type="image" class="img h-auto col-2" title="image" />
                    <input type="image" class="img h-auto col-2" title="image" />
                    <input type="image" class="img h-auto col-2" title="image" />
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
                <button type="button" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary">Delete</button>
            </div>
        </div>
    </div>
</div>


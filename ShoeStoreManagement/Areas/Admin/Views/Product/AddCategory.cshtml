@using ShoeStoreManagement.Core.ViewModel;
@using ShoeStoreManagement.Core.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ProductVM;



<div class="col">
    <div class="form-group">
        @foreach (var i in Model.categories)
        {
            <div class="form-check mt-2">
                <input class="form-check-label ml-5 d-flex align-items-center" value="@i.ProductCategoryName" readonly />
            </div>
        }
    </div>

</div>

<input type="text" placeholder="New category ( u wont be able to adjust, so be careful)" name="addCategories" id="input-addCategories" class="form-control ms-2" />
<button type="button" class="btn btn-primary" onclick="jQueryAjaxPost('@(Url.Action("AddCategory", "Product"))')">Add ne</button>
<div class="modal-footer d-flex justify-content-between">
    <p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
    <button type="submit" class="btn btn-primary">Submit</button>
</div>
@Html.AntiForgeryToken()


@section Scripts {
    @{
        <partial name="./_ValidationScriptsPartial"></partial>
    }
	}


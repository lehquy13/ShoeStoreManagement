<!-- Button trigger modal -->
<button type="button" class="btn btn-primary icon-plus rounded position-fixed bottom-0" data-toggle="modal" to data-target="#Modal">
</button>

<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content w-auto px-3 py-3">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Add new Product</h5>
            </div>
            <div class="modal-body p-0 mt-2" style="width: 550px">
                <div class="row">
                    <div class="col-6 d-flex flex-column gap-2">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Annanas A">
                            <label for="floatingInput">Enter Name</label>
                        </div>
                        <div class="form-floating">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Black">
                            <label for="floatingInput">Enter Color</label>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control w-90" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">Enter Descripiton</label>
                        </div>
                    </div>
                    <div class="col-6 d-grid gap-2">
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                            <label for="floatingSelect">Category</label>
                        </div>
                        <div class="form-floating">
                            <input type="number" class="form-control" id="floatingInput" placeholder="$20">
                            <label for="floatingInput">Enter Price</label>
                        </div>
                        <div class="form-floating">
                            <input type="number" class="form-control" id="floatingInput" placeholder="1">
                            <label for="floatingInput">Enter Amount</label>
                        </div>
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                            <label for="floatingSelect">Voucher</label>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-start mt-3 gx-1">
                    @*<input type="file" class="img h-auto col-2" title="image" id="inputGroupFile" />
                    <img src="//placehold.it/140?text=IMAGE" class="img h-auto col-2" id="preview" />*@
                    @*<img src="image/shoe.jpg" class="img h-auto col-2" alt="image" />
                    <img src="image/shoe.jpg" class="img h-auto col-2" alt="image" />
                    <img src="image/shoe.jpg" class="img h-auto col-2" alt="image" />*@
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <p class="icon-back" data-dismiss="modal" aria-label="Back"></p>
                <button type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        // input plugin
        bsCustomFileInput.init();

        // get file and preview image
        $("#inputGroupFile").on('change', function () {
            var input = $(this)[0];
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result).fadeIn('slow');
                }
                reader.readAsDataURL(input.files[0]);
            }
        })

    })

</script>



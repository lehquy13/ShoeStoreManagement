@using ShoeStoreManagement.Views.Shared.Components;
@using ShoeStoreManagement.Core.ViewModel;
@using ShoeStoreManagement.Core.Enums;
@using ValueType = ShoeStoreManagement.Core.Enums.ValueType;

@model VoucherVM

<form method="post" action="Admin/Voucher/Edit" class="modal-content border-0" style="width: 760px" onsubmit="return editSth(this);">
	<div class="row">
		<div class="col-sm d-flex flex-column gap-2">
			<div>
				<div class="form-floating" hidden>
					<input type="text" asp-for="voucher.Id" class="form-control" id="floatingInput" placeholder="">
					<label for="floatingInput">Id Value</label>
				</div>
				<div class="form-floating">
					<select class="form-select" asp-for="voucher.ConditionType" asp-items="@(new SelectList(Model.conditionTypes))" id="floatingSelect" aria-label="Floating label select example">
					</select>
					<label for="floatingSelect">Enter Condition</label>
					<span asp-validation-for="voucher.ConditionType" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input type="number" asp-for="voucher.ConditionValue" class="form-control" id="floatingInput" placeholder="$50">
					<label for="floatingInput">Enter Condition Value</label>
					<span asp-validation-for="voucher.ConditionValue" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input type="date" asp-for="voucher.CreatedDate" class="form-control" id="floatingInput" placeholder="02-12-2022">
					<label for="floatingInput">Enter Start Date</label>
					<span asp-validation-for="voucher.CreatedDate" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="col-sm d-flex flex-column">
			<div class="form-floating">
				<select class="form-select" asp-for="voucher.ValueType" asp-items="@(new SelectList(Model.valueTypes))" id="floatingSelect" aria-label="Floating label select example">
				</select>
				<label for="floatingSelect">Value Type</label>
				<span asp-validation-for="voucher.ValueType" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input type="number" asp-for="voucher.Value" class="form-control" id="floatingInput" placeholder="5">
				<label for="floatingInput">Enter Value</label>
				<span asp-validation-for="voucher.Value" class="text-danger"></span>
			</div>
			<div class="form-floating">

				<select class="form-select" asp-for="voucher.ExpiredType" asp-items="@(new SelectList(Model.expireTypes))" id="floatingSelect" aria-label="Floating label select example">
				</select>
				<label for="floatingSelect">Enter Expired Type</label>
				<span asp-validation-for="voucher.ExpiredType" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input type="text" asp-for="voucher.ExpiredValue" class="form-control" id="floatingInput" placeholder="">
				<label for="floatingInput">Enter Expired Value</label>
				<span asp-validation-for="voucher.ExpiredValue" class="text-danger"></span>
			</div>
			<div class="d-flex form-floating">
				<input type="text" asp-for="voucher.Code" readonly placeholder="hehe" id="voucherCode" class="form-control flex-fill" />
				<label for="floatingInput">Enter Code</label>
			</div>
		</div>
	</div>

	<div class="d-flex justify-content-end mt-5 pe-3">
		<button type="submit" class="btn btn-primary flex-grow-1">Submit</button>
		<a class="btn btn-secondary ms-1 icon-delete" onclick="deleteSth('@Url.Action("Delete","Voucher",Model.voucher.Id,Context.Request.Scheme)', '@Model.voucher.Id')">
			Delete
		</a>
	</div>

	@Html.AntiForgeryToken()
</form>

@section Scripts {
	@{
		<partial name="./_ValidationScriptsPartial"></partial>
	}
	}
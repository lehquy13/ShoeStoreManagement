@page
@model AddressModel
@{
    ViewData["Title"] = "Address";
    ViewData["ActivePage"] = ManageNavPages.Address;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col">
        <div class="row mt-3">
            @if (Model.currentUser.Addresses.Count > 0)
            {
                <input type="text" class="form-control" placeholder="Ngueyn nguyen nguyen" id="floatinput" value=@Model.currentUser.Addresses[0].AddressDetail runat="server" />
            }
            
            <p class="col-1 fa icon-plus" type="submit"></p>
        </div>

        
        <form id="download-data" method="post"> @*asp-page will fill the page we are going to move, its null now*@
            <button class="btn btn-primary" type="submit">
                Add an address
                <i class="fa icon-plus"></i>
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
